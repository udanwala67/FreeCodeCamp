@model IEnumerable<Catagory>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-white">Catagory List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Catagory" asp-action="Create"
               class="btn btn-primary text-lg-end ">
                <i class="bi bi-patch-plus-fill"></i>&nbsp; Create a catagory
            </a>
        </div>
    </div>
    <hr />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Catagory Name
                </th>
                <th>
                    display Order
                </th>
                <th></th>
                <th></th>

            </tr>

        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td width="20%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Catagory" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-square">&nbsp;</i> Edit</a>
                        </div>
                    </td>
                    <td width="20%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Catagory" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash3">&nbsp;</i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>



    </table>

</div>
